# HIMARI Opus1 - Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# REDPANDA / KAFKA
# =============================================================================
KAFKA_BOOTSTRAP=localhost:9092
KAFKA_USER=himari-consumer
KAFKA_PASSWORD=your-kafka-password-here

# =============================================================================
# REDIS (Feature Store)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0

# =============================================================================
# TIMESCALEDB (Analytics Store)
# =============================================================================
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=himari_analytics
TIMESCALE_USER=himari
TIMESCALE_PASSWORD=your-timescale-password-here

# =============================================================================
# NEO4J (Knowledge Graph)
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# =============================================================================
# PROMETHEUS (Monitoring)
# =============================================================================
PROMETHEUS_PORT=9090

# =============================================================================
# FLINK CONFIGURATION
# =============================================================================
FLINK_PARALLELISM=4
FLINK_CHECKPOINT_INTERVAL_MS=30000

# =============================================================================
# DATA SOURCES (Optional - for production ingestion)
# =============================================================================
# BINANCE_API_KEY=your-binance-api-key
# BINANCE_API_SECRET=your-binance-api-secret
# KRAKEN_API_KEY=your-kraken-api-key
# KRAKEN_API_SECRET=your-kraken-api-secret
